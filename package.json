{
  "name": "madedotcom-blog",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:next": "next build && next export -o build/",
    "start": "next start",
    "lint": "eslint . --ext .jsx,.js,.tsx,.ts",
    "lint:ts": "tsc --noemit",
